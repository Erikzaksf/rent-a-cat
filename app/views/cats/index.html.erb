<% if current_user %>
  <%= current_user.user_name %>
  <h5><%= link_to "Sign out", 'users/sign_out', method: :delete %></h5>
<% else %>
  <h5><%= link_to "Sign in", 'users/sign_in' %> </h5>
<% end %>

<h1>Cat List</h1>
<% if @cats.any? %>
  <% @cats.each do |cat| %>
    <div class="cat-name">
      <h3><%= link_to cat.name, cat_path(cat) %></h3>
    </div>
  <% end %>
<% else %>
  <p>sorry, there are no cats yet</p>
<% end %>
<% if current_user.try(:admin?) %>
|  <%= link_to "Add an cat", new_cat_path %>
<% end %>
