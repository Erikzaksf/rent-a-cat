<h5><%= link_to "Back to Cats", cats_path %></h5>


<h1>Add a Cat</h1>
<%= form_for @cat do |f| %>
  <div class="form_group">
    <%= f.label "name", class: "control-label"  %>
    <%= f.text_field :name, class: "form-control"%>
    <br>
    <%= f.label :about, class: "control-label" %>
    <%= f.text_area :about, class: "form-control" %>
    <br>
    <%= f.label :traits, class: "control-label" %>
    <%= f.text_area :traits, class: "form-control" %>
    <br>
    <%= f.label :price, class: "control-label" %>
    <%= number_field(:cat, :price, in: 1.0..200.0, step: 0.5) %>
    <%= f.submit "Add" %>
  </div>
<% end %>
